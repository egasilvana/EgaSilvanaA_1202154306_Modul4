<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.egasilvanaa_1202154306_studycase4.CariGambar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cari Gambar"
            android:layout_marginTop="20dp"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/inputurl"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQTXUoaEND1CjmkkFkTDSlSfj15CEmDnzqcpYKCGIy0NEYaANXw" />

        <Button
            android:id="@+id/btnCari"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Klik Untuk Mencari Gambar"
            android:onClick="SearchImage"/>

        <ImageView
            android:id="@+id/tampilGambar"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
